{
  "name": "ha-floor-plan-editor",
  "version": "1.0.0",
  "description": "Graficzny edytor planów pięter dla Home Assistant",
  "main": "backend/index.js",
  "scripts": {
    "dev": "concurrently \"npm run backend:dev\" \"npm run frontend:dev\"",
    "backend:dev": "nodemon backend/index.js",
    "frontend:dev": "cd frontend && npm run dev",
    "build": "npm run frontend:build && npm run backend:build",
    "frontend:build": "cd frontend && npm run build",
    "backend:build": "echo 'Backend build placeholder'",
    "start": "node backend/index.js",
    "test": "jest",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "docker:build": "docker build -t ha-floor-plan-editor .",
    "docker:run": "docker run -p 3000:3000 ha-floor-plan-editor"
  },
  "keywords": [
    "home-assistant",
    "floorplan",
    "editor",
    "svg",
    "home-automation",
    "addon"
  ],
  "author": "ussdeveloper",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ussdeveloper/ha-floor-plan-editor"
  },
  "bugs": {
    "url": "https://github.com/ussdeveloper/ha-floor-plan-editor/issues"
  },
  "homepage": "https://github.com/ussdeveloper/ha-floor-plan-editor#readme",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "ws": "^8.14.2",
    "yaml": "^2.3.4",
    "multer": "^1.4.5-lts.1",
    "sharp": "^0.32.6"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "nodemon": "^3.0.2",
    "jest": "^29.7.0",
    "eslint": "^8.55.0",
    "eslint-plugin-node": "^11.1.0",
    "@types/node": "^20.10.4",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}